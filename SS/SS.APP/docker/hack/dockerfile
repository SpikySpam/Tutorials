ARG DOMAIN
ARG VERSION
FROM ${DOMAIN}/ubuntu:${VERSION} AS base

RUN apt-get update && apt-get upgrade -y
WORKDIR /root
ENV DEBIAN_FRONTEND="noninteractive"

